<%- content_for :title, "Edit #{@item.name}" -%>

<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">アイテム編集</h1>
    <div class="flex space-x-2">
      <%= link_to "詳細", @item, class: "btn btn-outline" %>
      <%= button_to "削除", @item, method: :delete, 
          data: { confirm: "本当に削除しますか？" }, 
          class: "btn btn-error" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="p-6">
      <%= render 'form', item: @item, button_text: '変更を保存' %>
    </div>
  </div>
</div>